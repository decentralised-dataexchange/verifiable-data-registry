{
  "type": "object",
  "properties": {
    "fundingSource": {
      "type": "object",
      "limitDisclosure": true,
      "properties": {
        "aliasId": {
          "description": "Unique identifier assigned for the funding source.",
          "type": "string",
          "limitDisclosure": true
        },
        "currency": {
          "description": "Currency code (ISO 4217, e.g., EUR, USD).",
          "pattern": "^[A-Z]{3}$",
          "type": "string",
          "limitDisclosure": true
        },
        "icon": {
          "description": "URI to card logo.",
          "format": "uri",
          "type": "string",
          "limitDisclosure": true
        },
        "iin": {
          "description": "Issuer Identification Number (IIN).",
          "pattern": "^[0-9]{6,8}$",
          "type": "string",
          "limitDisclosure": true
        },
        "panLastFour": {
          "description": "Last four digits of the card number.",
          "pattern": "^[0-9]{4}$",
          "type": "string",
          "limitDisclosure": true
        },
        "parLastFour": {
          "description": "Last four characters of the Payment Account Reference (PAR).",
          "maxLength": 4,
          "type": "string",
          "limitDisclosure": true
        },
        "scheme": {
          "description": "Card scheme.",
          "enum": [
            "Visa",
            "American Express",
            "Discover",
            "JCB",
            "Mastercard",
            "UnionPay"
          ],
          "type": "string",
          "limitDisclosure": true
        },
        "type": {
          "description": "Type of funding source.",
          "enum": ["card"],
          "type": "string",
          "limitDisclosure": true
        }
      },
      "required": [
        "aliasId",
        "currency",
        "icon",
        "iin",
        "panLastFour",
        "scheme",
        "type"
      ]
    }
  },
  "required": ["fundingSource"]
}
